<% if @cards.empty? %>
    Нет сохраненных карточек. <%= link_to "Хотите добавить?", new_card_path %>
<% else %>
    <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>Original text</th>
        <th>Translated text</th>
        <th>Review date</th>
      </tr>
      <% @cards.each do |c| %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.original_text %></td>
            <td><%= c.translated_text %></td>
            <td><%= c.review_date.strftime("%d/%m/%Y") %></td>
          </tr>
      <% end %>

    </table>
<% end %>