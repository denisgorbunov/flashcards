<%= form_tag user_sessions_path, :method => :post do %>
<p><%= label_tag :email, 'E-Mail' %><br />
    <%= text_field_tag :email %>
</p>
<p>
    <%= label_tag :password, 'Пароль' %><br />
    <%= password_field_tag :password %>
</p>
<p>
    <%= submit_tag 'Вход', class: 'btn btn-sm btn-success' %> <%= link_to 'Назад', user_sessions_path, class: 'btn btn-sm btn-primary' %>
</p>
<% end %>